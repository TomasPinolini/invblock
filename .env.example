# ─── Supabase ───────────────────────────────────────────────────────────────
# Database connection (use pooler/transaction mode URL from Supabase dashboard)
DATABASE_URL=your_database_url_here

# Supabase Auth (public, safe for client-side)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Supabase service role (server-only, NEVER expose to client)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ─── Security ───────────────────────────────────────────────────────────────
# AES-256-GCM key for encrypting broker credentials (32-byte hex string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_64_char_hex_encryption_key_here

# ─── AI ─────────────────────────────────────────────────────────────────────
# Anthropic API key for Claude-powered insights
ANTHROPIC_API_KEY=sk-ant-your_key_here

# ─── Email (Brevo) ──────────────────────────────────────────────────────────
BREVO_API_KEY=your_brevo_api_key_here
SENDER_EMAIL=noreply@yourdomain.com

# ─── Monitoring ─────────────────────────────────────────────────────────────
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# ─── App ────────────────────────────────────────────────────────────────────
APP_URL=http://localhost:3000

# ─── PPI Broker (optional) ──────────────────────────────────────────────────
# Only needed if using PPI broker integration
PPI_API_URL=https://clientapi.portfoliopersonal.com
PPI_AUTHORIZED_CLIENT=API_CLI_REST
PPI_CLIENT_KEY=your_ppi_client_key_here

# ─── Upstash Redis (rate limiting) ──────────────────────────────────────────
UPSTASH_REDIS_REST_URL=your_upstash_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here
